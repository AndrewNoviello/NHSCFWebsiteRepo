<%- include ("../../_partials/_form_nav.ejs"); %>
<div class="signup-form">
    <form action="/eventRegister" method="post">
		<h2 style="overflow-wrap:break-word;"><%=info.eventName%></h2>
        <p style="overflow-wrap:break-word;"><%-info.eventDesc%></p>
        <hr>
        <input type="hidden" name="curEventName" id="curEventName" value="<%=info.eventName%>">
        <input type="hidden" name="curEventDate" id="curEventDate" value="<%=info.eventDate%>">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Full Name" name="attendeeName" aria-describedby="basic-addon1">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="School Name" name="attendeeSchool" aria-describedby="basic-addon1">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Email Address" name="attendeeEmail" aria-describedby="basic-addon1">
        </div>
		<% if(info.numEventFields > 0){%>
        <% items.forEach(function(field) { %>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="<%=field%>" name="<%=field.replace(/ /g, '')%>" aria-describedby="basic-addon1">
        </div>  
        <% }) %>  
		<%}%>              
                 
		<div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg">Register for the Event</button>
        </div>
    </form>
</div>
</body>
</html>