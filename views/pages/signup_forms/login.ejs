<%- include ("../../_partials/_form_nav.ejs"); %>
<div class="signup-form">
    <form action="/login" method="post">
		<h2>Log In</h2>
        <p>Please sign in to view your committee member dashboard. If you forgot your login or password, please "Contact us by email" via the "Home" page footer.</p>
        <hr>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Email" name="email" aria-describedby="basic-addon1">
        </div>
		<div class="form-group">
            <input type="password" class="form-control" placeholder="Password" name="password" aria-describedby="basic-addon1">
        </div>        
		<div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg">Sign In</button>
        </div>
		<div class="form-group">
            <a href="/forgotPassword" style="color:lightskyblue">Forgot Your Password?</a>
        </div>  
    </form>
</div>
</body>
</html>